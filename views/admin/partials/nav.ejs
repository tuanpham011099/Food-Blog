<script>
    let searchBtn = document.getElementById("click-s");
    let searchKey = document.getElementById("keyword-s");
    searchBtn.onclick = () => {
        if (!searchKey.value) {
            return;
        } else {
            if (window.location.href.indexOf("/admin/users") > 1) {
                window.location.href = `/admin/users?name=${searchKey.value}`
                return
            }
            if (window.location.href.indexOf("/admin/recipes") > 1) {
                window.location.href = `/admin/recipes?title=${searchKey.value}`
                return
            }
        }
    }
</script>